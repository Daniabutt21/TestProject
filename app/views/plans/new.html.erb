<h1>Add New Plan</h1>

<%= form_with scope: :plan, url: plans_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :fee %><br>
    <%= form.text_field :fee %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>


<%= link_to 'Back', plans_path %>