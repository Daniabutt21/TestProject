<h1>Add New Subscription</h1>

<%= form_with scope: :subscription, url: plan_subscriptions_path(@plan.id), local: true do |form| %>
  <p>
    <%= form.label :user_id %>
    <%=  current_user.id %>
  </p>
 
  <p>
    <%= form.label :plan_id %>
    <%= form.text_field :plan_id %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>


<%= link_to 'Back', plan_subscriptions_path(@plan.id) %>